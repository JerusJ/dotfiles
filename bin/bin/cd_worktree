#!/usr/bin/env bash
set -euxo pipefail

repo_root="$1"
repo_root=${repo_root/#\~/$HOME}
branch="$2"
pr_number="$3"

cd "$repo_root"
git fetch --all

# reuse existing worktree if present
if git worktree list | grep -F "[${branch}]" >/dev/null; then
	path=$(git worktree list | grep -F "[${branch}]" | awk '{print $1}')
	cd "$path"
fi

# ensure branch exists (fetch from origin if needed)
if ! git show-ref --verify --quiet "refs/heads/${branch}"; then
	git fetch origin "${branch}:${branch}"
fi

repo_name=$(basename "$(git rev-parse --show-toplevel)")

# add new worktree
worktree_root="$HOME/code/PULL_REQUEST_REVIEWS"
mkdir -p "$worktree_root"
worktree="${worktree_root}/${repo_name}-PR${pr_number}"
[ -d "$worktree" ] || git worktree add "$worktree" "$branch" || true

worktree_tmp="${worktree_root}/$repo_name"
cd "$worktree_tmp"

tmux split-window -v -c "$worktree_tmp" "nvim -c ':Octo pr edit $pr_number'"

if [[ -f ./setup.sh ]]; then
	./setup.sh
fi
